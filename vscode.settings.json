{
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.enable": true,
    "vim.matchpairs": "(:),{:},[:],<:>",
    "vim.leader": " ",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["x"],
            "after": ["\"", "_", "x"]
        },
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["D"],
            "after": ["\"", "_", "D"]
        },
        {
            "before": ["c"],
            "after": ["\"", "_", "c"]
        },
        {
            "before": ["C"],
            "after": ["\"", "_", "C"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"", "*", "d"]
        },
        {
            "before": ["<leader>", "D"],
            "after": ["\"", "*", "D"]
        },
        {
            "before": ["<leader>", "t"],
            "after": ["g", "t"]
        },
        {
            "before": ["<leader>", "T"],
            "after": ["g", "T"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["c"],
            "after": ["\"", "_", "c"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"", "*", "d"]
        } 
    ],
    "vim.sneak": true
}
