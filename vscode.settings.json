{
    "vim.vimrc.enable": true,
    "vim.useSystemClipboard": true,
    "vim.leader": " ",
    // mostly useful for linux/windows
    "vim.handleKeys": {
        "<C-w>": false,
        "<C-s>": false,
        "<C-z>": false,
        "<C-t>": false,
        "<C-n>": false,
        "<C-k>": false,
    },
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["x"],
            "after": ["\"", "_", "x"]
        },
        {
            "before": ["X"],
            "after": ["\"", "_", "X"]
        },
        {
            "before": ["c"],
            "after": ["\"", "_", "c"]
        },
        {
            "before": ["C"],
            "after": ["\"", "_", "C"]
        },
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["D"],
            "after": ["\"", "_", "D"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"", "*", "d"]
        },
        {
            "before": ["<leader>", "D"],
            "after": ["\"", "*", "D"]
        },
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": ["d"],
            "after": ["\"", "_", "d"]
        },
        {
            "before": ["<leader>", "d"],
            "after": ["\"", "*", "d"]
        }
    ],
    "vim.highlightedyank.enable": true
}
